<div class="wrapper">
      <form action="/jobs/<%= job %>/edited?_method=PUT" method="POST" id="sky-form3" class="sky-form" novalidate="novalidate">
  						<header>Update your job information</header>

  						<fieldset>
  							<div class="row">
  								<section class="col col-6">
  									<label class="label">Application status</label>
  									<label class="input">
  										<i class="icon-append fa fa-thumb-tack"></i>
                      <select  name="status" id="status"  class="form-control">
                        <% if(match.status === "Active"){ %>
                          <option selected>Active</option>
                          <option >Inactive</option>
                        <%} %>
                        <% if(match.status === "Inactive"){ %>
                          <option >Active</option>
                          <option selected>Inactive</option>
                        <%} %>

                      </select>
  									</label>
  								</section>
  								<section class="col col-6">
  									<label class="label">Current phase</label>
  									<label class="input">
  										<i class="icon-append fa fa-spinner"></i>
                      <select name="currentPhase" id="currentPhase" class="form-control">
                         <%if( match.currentPhase == "Resume sended" ){%>
                             <option selected >Resume sended</option>
                        <%} else { %>
                             <option>Resume sended</option>
                        <%}%>
                        <%if( match.currentPhase == "Phone Screen" ){%>
                            <option selected >Phone Screen</option>
                        <%} else { %>
                            <option>Phone Screen</option>
                        <%}%>
                        <%if( match.currentPhase == "Interview on site" ){%>
                           <option selected >Interview on site</option>
                        <%} else { %>
                           <option>Interview on site</option>
                        <%}%>
                        <%if( match.currentPhase == "Waiting for response" ){%>
                          <option selected >Waiting for response</option>
                        <%} else { %>
                          <option>Waiting for response</option>
                        <%}%>
                        <%if( match.currentPhase == "Frozen" ){%>
                         <option selected >Frozen</option>
                        <%} else { %>
                         <option>Frozen</option>
                        <%}%>
                      </select>
  									</label>
  								</section>
  							</div>

  							<section>
  								<label class="label">Main contact</label>
  								<label class="input">
  									<i class="icon-append fa fa-user"></i>
  									<input type="text" class="form-control" name="contact" id="contact" value="<%= match.contact %>" placeholder="Who's on your side?">
  								</label>
  							</section>

                <section>
  								<label class="label">How much you like this job ?</label>
  								<label class="textarea">
  									<input type="range" class="custom-range" min="0" step="1" max="5" value= "<%= match.likeness%>" name="likeness" id="likeness">
  								</label>
  							</section>

  							<section>
  								<label class="label">Message</label>
  								<label class="textarea">
  									<i class="icon-append fa fa-comment"></i>
  									<textarea rows="4" name="message" id="message"></textarea>
  								</label>
  							</section>

  							<section>
  								<label class="label">Enter characters below:</label>
  								<label class="input input-captcha">
  									<img src="assets/plugins/sky-forms-pro/skyforms/captcha/image.php?&lt;?php echo time(); ?&gt;" width="100" height="32" alt="Captcha image">
  									<input type="text" maxlength="6" name="captcha" id="captcha">
  								</label>
  							</section>

  						</fieldset>

  						<footer>
  							<button type="submit" class="button">Send message</button>
  						</footer>

  						<div class="message">
  							<i class="rounded-x fa fa-check"></i>
  							<p>Your message was successfully sent!</p>
  						</div>
  					</form>

</div>










<div class="form-group">
 <label for="interviewDate" >Next important date related to this job</label>
 <input class="form-control" type="date" name="interviewDate" id="interviewDate">
</div>
<div class="form-group">
 <label for="inputAddress2">Interview address </label>
 <input type="text" class="form-control" name="interviewAddress" value="<%= match.interviewAddress %>" id="interviewAddress" placeholder="1234 Main St">
</div>

<section>
 <label class="label">Any comments ???</label>
 <label class="textarea">
   <i class="icon-append fa fa-comment"></i>
   <textarea rows="4" type="text" id="comment" value="<%= match.comment %>" name="comment" placeholder="Add your ideas here"></textarea>
 </label>
</section>

<button type="submit" class="btn btn-primary">Update</button>
